<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  
    <body>
        <!-- Navigation-->
        <%- include('./partials/nav.ejs') %>

            <!-- Page Header-->
            <header class="masthead">
              <div class="overlay"></div>
              <div class="container">
                <div class="row">
                  <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="page-heading">
                      <h1>Create New Post</h1>
                    </div>
                  </div>
                </div>
              </div>
            </header>
            
            <!-- create New post form-->
      <div class="container">
        <div class="row">
          <div class="col-md-8 offset-md-2">
            <form action="/blogs" method="POST" enctype="multipart/form-data">
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Username</label>
                  <input type="text" name="username" placeholder="Username" class="form-control" required>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Title</label>
                  <input type="text" name="title" id="title" placeholder="Title" class="form-control" required>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Snippet</label>
                  <input type="text" id="snippet" name="snippet" placeholder="Snippet" class="form-control" required>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <label>Content</label>
                  <textarea name="body" placeholder="Content ..." id="editor" cols="30" rows="10" class="form-control"></textarea>
                  <!-- Add a validation message placeholder -->
                  <div id="ckeditorValidationMessage" style="color: red;"></div>
                </div>
              </div>
              <div class="form-group mt-3">
                <!-- Existing file input for your header background -->
                <input type="file" name="image" id="image" class="form-control-file">
              </div>
              <div class="form-group mt-3">
                <!-- CKEditor file upload input (use a unique name) -->
                <input type="file" name="ckeditorUpload" id="ckeditorUpload" class="form-control-file">
              </div>
              <div class="form-group my-4 text-center">
                <button class="btn btn-primary">Create Post</button>
              </div>
            </form>            
          </div>
        </div>
      </div>

            <!-- Footer-->
            <%- include('./partials/footer.ejs') %>
            <!-- Bootstrap core JS-->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
      <!-- Core theme JS-->
      
      <script src="/scripts.js"></script>
    </body>

</html>